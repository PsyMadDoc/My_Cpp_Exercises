#include <iostream>
#include <cstdlib>
using namespace std;
//The Magic 8-Ball

int main() {
  
  //User input
  string question;
  cout << "The Universe here. What do you want to know?\n";
  cin >> question;
  
  // Output
  cout << "MAGIC 8-BALL: ";
  
  // Randomizer
  srand(time(NULL));
  int answer = 1 + rand() % 20;
  cout << answer << "\n";
  
  // Answers
  switch (answer) {
    case 1:
    	cout << "It is certain.\n";
        break;
    case 2:
    	cout << "It is decidedly so.\n";
        break;
    case 3:
    	cout << "Without a doubt.\n";
        break;
    case 4:
    	cout << "Yes - definitely.\n";
        break;
    case 5:
    	cout << "You may rely on it.\n";
        break;
    case 6:
    	cout << "As I see it, yes.\n";
        break;
    case 7:
    	cout << "Most likely.\n";
        break;
    case 8:
    	cout << "Outlook is good.\n";
        break;
    case 9:
    	cout << "Yes.\n";
        break;
    case 10:
    	cout << "Signs point to yes.\n";
        break;
    case 11:
    	cout << "Reply hazy, try again.\n";
        break;
    case 12:
    	cout << "Ask again later.\n";
        break;
    case 13:
    	cout << "Better not tell you now.\n";
        break;
    case 14:
    	cout << "Cannot predict now.\n";
        break;
    case 15:
    	cout << "Concentrate and ask again.\n";
        break;
    case 16:
    	cout << "Don't count on it.\n";
        break;
    case 17:
    	cout << "My reply is no.\n";
        break;
    case 18:
    	cout << "My sources say no.\n";
        break;
    case 19:
    	cout << "Outlook not so good.\n";
        break;
    case 20:
    	cout << "Very doubtful.\n";
        break;
  }
return 0;
} // end main();
